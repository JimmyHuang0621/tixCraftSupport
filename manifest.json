{
	"name": "tixCraft Support",
	"description": "拓元輔助程式",
	"version": "1.4.1",
	"permissions": [
		"activeTab",
		"storage"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_title": "拓元輔助"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"https://tixcraft.com/activity/detail/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"Script/detailScript.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/activity/game/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"Script/gameScript.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/ticket/area/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"Script/areaScript.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/ticket/ticket/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"Script/ticketScript.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"Script/contentScript.js"
			]
		}
	],
	"manifest_version": 2
}