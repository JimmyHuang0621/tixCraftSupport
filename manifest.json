{
	"name": "tixCraft Support",
	"description": "拓元輔助程式",
	"version": "1.4.2",
	"permissions": [
		"activeTab",
		"storage"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_title": "拓元輔助",
		"default_popup": "options.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"content_scripts": [
		{
			"matches": [
				"https://tixcraft.com/*"
			],
			"run_at": "document_end",
			"js": [
				"jquery.min.js",
				"src/tixcraft/content.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/activity/detail/*"
			],
			"run_at": "document_end",
			"js": [
				"src/tixcraft/detail.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/activity/game/*"
			],
			"run_at": "document_end",
			"js": [
				"src/tixcraft/game.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/ticket/area/*"
			],
			"run_at": "document_end",
			"js": [
				"src/tixcraft/area.js"
			]
		},
		{
			"matches": [
				"https://tixcraft.com/ticket/ticket/*"
			],
			"run_at": "document_end",
			"js": [
				"src/tixcraft/ticket.js"
			]
		}
	],
	"manifest_version": 2
}